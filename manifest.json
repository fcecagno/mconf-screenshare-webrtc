{
  "manifest_version": 2,
  "name": "Kurento Screenshare Test Extension",
  "description": "test extension",
  "version": "0.1.2",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo-16x16.png",
    "48": "logo-48x48.png",
    "128": "logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://*.mconf.com/*",
          "*://*.dev.mconf.com/*",
          "*://*.bigbluebutton.org/*",
          "*://*.blindside-dev.com/*"
      ]
  },
  "web_accessible_resources": [
    "icon.png"
  ]
}
