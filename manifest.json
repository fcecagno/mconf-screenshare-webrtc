{
  "manifest_version": 2,
  "name": "GreenLight Web Screenshare",
  "description": "A simple extension that allows you to stream your desktop into meetings with GreenLight Web.",
  "version": "0.1.5",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo-16x16.png",
    "48": "logo-48x48.png",
    "128": "logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://*.glcollaboration.com/*"
      ]
  },
  "web_accessible_resources": [
    "icon.png"
  ]
}
