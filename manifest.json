{
  "manifest_version": 2,
  "name": "Mconf Screenshare",
  "description": "A simple extension that allows you to stream your desktop into meetings with Mconf.",
  "version": "0.1.8",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "logo-16x16.png",
    "48": "logo-48x48.png",
    "128": "logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://*.mconf.com/*",
          "*://*.mconf.com.br/*",
          "*://*.mconf.org/*",
          "*://*.dev.mconf.com/*",
          "*://*.bigbluebutton.org/*",
          "*://*.blindside-dev.com/*",
          "*://*.imdt.com.br/*",
          "*://*.rnp.br/*",
          "*://*.redclara.net/*",
          "*://*.ufrgs.br/*",
          "*://*.tjrr.jus.br/*",
          "*://*.capacitador.com.br/*"
      ]
  },
  "web_accessible_resources": [
    "icon.png"
  ]
}
